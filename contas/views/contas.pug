//- contas.pug
extends ../../templates/layout

block conteudo
  .min-h-screen.p-6.flex.items-center.justify-center
    .w-full.max-w-3xl.bg-gray-800.shadow-md.p-6.mb-6.rounded-lg
      h2.text-2xl.font-semibold.mb-6.text-center Contas

      //- Formulário de Nova Conta
      .card.bg-gray-800.shadow-md.p-6.mb-6
        h3.font-medium.text-xl Adicionar Nova Conta
        form(action="/conta" method="POST")
          .space-y-6
            div
              label(for="nome_conta" class="block text-sm font-medium") Nome da Conta
              input#nome_conta(name="nome_conta" type="text" class="input input-bordered w-full bg-gray-700 text-white" placeholder="Nome da Conta" required)
            div
              label(for="tipo_conta" class="block text-sm font-medium") Tipo de Conta
              select#tipo_conta(name="tipo_conta" class="select select-bordered w-full bg-gray-700 text-white")
                option(value="corrente") Conta Corrente
                option(value="poupanca") Poupança
            div
              label(for="saldo" class="block text-sm font-medium") Saldo Inicial
              input#saldo(name="saldo" type="number" step="0.01" class="input input-bordered w-full bg-gray-700 text-white" placeholder="Saldo Inicial" required)
            div
              button(type="submit" class="btn btn-primary w-full") Adicionar Conta

      //- Lista de Contas
      h3.font-medium.text-xl.mb-4 Minhas Contas
      .overflow-x-auto
        table.table.table-zebra.w-full
          thead
            tr
              th Nome
              th Tipo
              th Saldo
              th Ações
          tbody
            tr
              td Conta Corrente
              td Corrente
              td R$ 1.500,00
              td
                button(class="btn btn-outline btn-danger") Excluir
            tr
              td Poupança
              td Poupança
              td R$ 3.000,00
              td
                button(class="btn btn-outline btn-danger") Excluir