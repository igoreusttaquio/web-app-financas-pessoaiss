form(action="/transacao" method="POST")
    .space-y-4
        div
            label(for="conta" class="block text-sm font-medium") Transação
            select(id="conta" name="conta" class="select select-bordered w-full bg-gray-700 text-white")
                option(value="1") Conta Corrente
                option(value="2") Poupança

        div
            label(for="categoria" class="block text-sm font-medium") Categoria
            select(id="categoria" name="categoria" class="select select-bordered w-full bg-gray-700 text-white")
                option(value="1") Receita
                option(value="2") Despesa

        div
            label(for="valor" class="block text-sm font-medium") Valor
            input(id="valor" name="valor" type="number" step="0.01" class="input input-bordered w-full bg-gray-700 text-white" placeholder="Valor" required)

        div
            label(for="descricao" class="block text-sm font-medium") Descrição
            input(id="descricao" name="descricao" type="text" class="input input-bordered w-full bg-gray-700 text-white" placeholder="Descrição (opcional)")

        div
            button(type="submit" class="btn btn-primary w-full") Adicionar Transação