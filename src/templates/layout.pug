//- layout.pug

doctype html
html(lang="pt-br")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= titulo
    link(rel="stylesheet" href="/styles/output.css")


  body.bg-gray-900.text-white.dark
    .navbar.bg-primary.flex.justify-between.items-center.p-4
      a.btn.btn-ghost.text-xl(href="/") Dashboard
      div.flex.space-x-4
        a.btn.btn-primary(href="/contas") Contas
        a.btn.btn-primary(href="/categorias") Categorias
        a.btn.btn-primary(href="/transacoes") Transações

  div.min-h-screen.p-6.flex.items-center.justify-center
    div.w-full.max-w-3xl.bg-gray-800.shadow-md.p-6.mb-6.rounded-lg
      h2.text-2xl.font-semibold.mb-6.text-center #{titulo}         
      block conteudo
